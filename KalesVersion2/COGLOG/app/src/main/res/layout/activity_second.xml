<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffebf6ff">

    <TextView
        android:id="@+id/_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL: "
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:textSize="20dp"
        android:textColor="#ff000000" />

    <TextView
        android:id="@+id/favourites"
        android:background="@drawable/line3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        style="@android:style/Holo.Light.ButtonBar"
        android:layout_below="@+id/_tv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"
        android:background="@color/white"
        android:layout_alignBottom="@+id/_tv"
        android:layout_alignLeft="@+id/_et1"
        android:layout_alignStart="@+id/_et1" />

    <TextView
        android:id="@+id/_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_alignBottom="@+id/_et1"
        android:layout_alignLeft="@+id/favourites"
        android:layout_alignStart="@+id/favourites"
        android:textSize="20dp"
        android:textColor="#ff000000" />

    <EditText
        android:id="@+id/_et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLines="1"
        android:background="@color/white"
        android:layout_toRightOf="@+id/_tv1"
        android:layout_toEndOf="@+id/_tv1"
        android:layout_below="@+id/button4" />

    <Button
        android:id="@+id/button4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/plus"
        android:onClick="Insert"
        android:layout_below="@+id/_et"
        android:layout_alignRight="@+id/favourites"
        android:layout_alignEnd="@+id/favourites" />

    <Button
        android:id="@+id/button3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:onClick="HomePage"
        android:background="@drawable/back"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/_tv"
        android:layout_alignStart="@+id/_tv"

        />

    <ListView
        android:id="@+id/mainListView"
        android:textAlignment="center"
        android:layout_width="fill_parent"
        android:layout_height = "fill_parent"
        android:layout_below="@+id/favourites"
        android:layout_alignLeft="@+id/_tv1"
        android:layout_alignStart="@+id/_tv1"

        android:background="#ffffffff">
    </ListView>

</RelativeLayout>
